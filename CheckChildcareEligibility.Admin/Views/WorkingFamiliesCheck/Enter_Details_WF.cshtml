@model CheckChildcareEligibility.Admin.ViewModels.ParentAndChildViewModel

@{
    ViewData["Title"] = "Enter the eligibility code details";
}

<div class="govuk-grid-column-two-thirds">
    <a class="govuk-back-link" href="@Url.Action("MenuSingleCheck", "Home")" onclick="history.back(); return false;">Back</a>
    @* <a class="govuk-back-link-nolink"></a> *@

    @if (!ViewData.ModelState.IsValid)
    {
        <partial name="_ValidationSummary" model="ViewData.ModelState" />
    }

    <span class="govuk-caption-l">@TempData["eligibilityTypeLabel"]</span>
    <h1 class="govuk-heading-l">@ViewData["Title"]</h1>

    <form asp-controller="WorkingFamiliesCheck" asp-action="Enter_Details_WF" method="post">
        <input type="hidden" name="eligibilityType" value="@TempData["eligibiltyType"]" />
        <fieldset class="govuk-fieldset">
            <div class="govuk-form-group">
                <label class="govuk-label govuk-label--m" for="Child.EligibilityCode">
                    Eligibility Code
                </label>
                <div id="Child.EligibilityCode" class="govuk-hint">
                    Eligibility code must be 11 digits long
                </div>
                <p class="govuk-error-message">
                    <span asp-validation-for="Child.EligibilityCode"></span>
                </p>
                <input class="govuk-input govuk-input--width-10 @(ViewData.ModelState["Child.EligibilityCode"]?.Errors.Count > 0 ? "govuk-input--error" : "")"
                       asp-controller="Check" asp-for="Child.EligibilityCode" type="text"
                       spellcheck="false" autocomplete="text"
                       aria-label="Eligibility Code">
            </div>

            <div class="govuk-form-group">
                <label class="govuk-label govuk-label--m" for="ni-number-entered">
                    National Insurance number
                </label>
                <div id="ni-number-entered-hint" class="govuk-hint">
                    Can be for a parent, guardian or partner. For example, ‘QQ 12 34 56 C’
                </div>
                <p class="govuk-error-message">
                    <span asp-validation-for="NationalInsuranceNumber"></span>
                </p>
                <input class="govuk-input govuk-!-width-one-third @(ViewData.ModelState["NationalInsuranceNumber"]?.Errors.Count > 0 ? "govuk-input--error" : "")"
                       asp-controller="Check" asp-for="NationalInsuranceNumber" type="text"
                       spellcheck="false" autocomplete="text"
                       aria-label="Parent or guardian National Insurance number">
            </div>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" role="group" aria-describedby="dob-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        Child date of birth
                    </legend>

                    <div id="Child.ChildDateOfBirth.Day" class="govuk-hint">
                        For example, 27 3 1980
                    </div>

                    <span asp-validation-for="Child.ChildDateOfBirth" class="govuk-error-message"></span>

                    <div class="govuk-date-input" id="ChildDateOfBirth">
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label class="govuk-label govuk-date-input__label" for="Day">
                                    Day
                                </label>
                                <input class="govuk-input govuk-date-input__input govuk-input--width-2 @(ViewData.ModelState["Child.ChildDateOfBirth.Day"]?.Errors.Count > 0 ? "govuk-input--error" : "")"
                                       asp-for="Child.Day" id="Day" type="text" inputmode="numeric" maxlength="2"
                                       aria-label="Day" />
                            </div>
                        </div>

                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label class="govuk-label govuk-date-input__label" for="Month">
                                    Month
                                </label>
                                <input class="govuk-input govuk-date-input__input govuk-input--width-2 @(ViewData.ModelState["Child.ChildDateOfBirth.Month"]?.Errors.Count > 0 ? "govuk-input--error" : "")"
                                       asp-for="Child.Month" id="Month" type="text" inputmode="numeric" maxlength="2"
                                       aria-label="Month" />
                            </div>
                        </div>

                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label class="govuk-label govuk-date-input__label" for="Year">
                                    Year
                                </label>
                                <input class="govuk-input govuk-date-input__input govuk-input--width-4 @(ViewData.ModelState["Child.ChildDateOfBirth.Year"]?.Errors.Count > 0 ? "govuk-input--error" : "")"
                                       asp-for="Child.Year" id="Year" type="text" inputmode="numeric" maxlength="4"
                                       aria-label="Year" />
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

        </fieldset>

        <button class="govuk-button govuk-!-margin-top-5" data-module="govuk-button">
            Run check
        </button>
    </form>
</div>

<script src="/js/validationSummary.js"></script>