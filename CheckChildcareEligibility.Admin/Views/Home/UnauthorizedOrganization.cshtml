@{
    ViewData["Title"] = "Unauthorized Organization";
}

<div class="govuk-grid-column-two-thirds">
    <div class="govuk-error-summary" data-module="govuk-error-summary">
        <div role="alert">
            <h2 class="govuk-error-summary__title">
                Unauthorized Organization
            </h2>
            <div class="govuk-error-summary__body">
                <p>
                    Access to this service is currently only available to Local Authority organizations.
                </p>
                <p>
                    Your organization type is not authorized to use this service. If you believe this is an error,
                    please contact your administrator or the Department for Education support team.
                </p>
            </div>
        </div>
    </div>

    <h2 class="govuk-heading-m">Organization Details</h2>
    <p>
        Your signed-in organization type does not match the required type for this service.
    </p>

    <p>
        @Html.ActionLink("Sign Out", "SignOut", "Account", null, new { @class = "govuk-button" })
    </p>
</div>
