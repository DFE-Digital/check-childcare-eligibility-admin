@{
    ViewData["Title"] = "Check failed";
}

@inject IConfiguration Configuration

<div class="govuk-grid-column-full">
    @Html.ActionLink("Back", "MenuSingleCheck", "Home", null, new { @class = "govuk-back-link backLinkJS" })

    <div id="content" data-type="Technical_Error" class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title"
                 data-module="govuk-notification-banner">
                <div class="govuk-notification-banner__header">
                    <h2 class="govuk-notification-banner__title"
                        id="govuk-notification-banner-title">
                        @ViewData["Title"]
                    </h2>
                </div>
                <div class="govuk-notification-banner__content">
                    <p class="govuk-notification-banner__heading">There's been a technical error.</p>
                    <p>
                        @Html.ActionLink("Try again later", "Enter_Details_WF", "WorkingFamiliesCheck", new { clearData = true }, null), ensuring you've entered the parent
                        or guardian details accurately.
                    </p>
                </div>
            </div>

            <h1 class="govuk-heading-l">If the check keeps failing</h1>
            <p class="govuk-body">
                Contact the <a href="@Configuration["ContactUsUrl"]"> Department for Education support desk.</a>
            </p>
        </div>
    </div>
</div>