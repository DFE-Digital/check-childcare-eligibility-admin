@model Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateDictionary

@{
    var formFields = Context.Request.HasFormContentType && Context.Request.Form != null
    ? Context.Request.Form.Keys.ToList()
    : new List<string>();

    List<string> desiredOrder;

    if (Model.ContainsKey("FirstName"))
    {
        desiredOrder = new List<string>
    {
        "FirstName",
        "LastName",
        "EmailAddress",
        "DateOfBirth",
        "IsNassSelected",
        "NationalAsylumSeekerServiceNumber",
        "NationalInsuranceNumber",
        "Day",
        "Month",
        "Year"
    };
    }
    else
    {
        desiredOrder = new List<string>
    {
        "ChildList.FirstName",
        "ChildList.LastName",
        "ChildList.School.URN",
        "ChildList.School.Name",
        "ChildList.School.Postcode",
        "ChildList.DateOfBirth",
        "ChildList.Day",
        "ChildList.Month",
        "ChildList.Year"
    };
    }

    var flattenedErrors = Model
        .SelectMany(m => m.Value.Errors
            .Select(e =>
                new
                {
                    Field = m.Key,
                    Error = e.ErrorMessage
                }
        ))
        .OrderBy(x =>
    {
        var keyWithoutIndex = x.Field;
        int startIndex = keyWithoutIndex.IndexOf('[');
        int endIndex = keyWithoutIndex.IndexOf(']');
        if (startIndex != -1 && endIndex != -1)
        {
            keyWithoutIndex = keyWithoutIndex.Substring(0, startIndex) + keyWithoutIndex.Substring(endIndex + 1);
        }
        return desiredOrder.IndexOf(keyWithoutIndex);
    });
}

<div id="error-summary" class="govuk-error-summary" data-module="govuk-error-summary">
    <div role="alert">
        <h2 class="govuk-error-summary__title">There is a problem</h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var modelError in flattenedErrors)
                {
                    <li>
                        @if (string.IsNullOrEmpty(modelError.Field))
                        {
                            @modelError.Error
                        }
                        else
                        {
                            <a class="govuk-error-message" href="#@modelError.Field">@modelError.Error</a>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
