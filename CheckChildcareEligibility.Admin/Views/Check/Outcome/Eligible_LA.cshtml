@model CheckChildcareEligibility.Admin.ViewModels.EligibilityOutcomeViewModel
@{
    ViewData["Title"] = "Children eligible";
}

<div class="govuk-grid-column-full">
    @* <a class="govuk-back-link" href="#" onclick="history.back(); return false;">Back</a> *@
    <a class="govuk-back-link-nolink"></a>

    <div id="content" data-type="Eligible_LA" class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-notification-banner govuk-notification-banner--success" role="alert"
                 aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
                <div class="govuk-notification-banner__header">
                    <h2 class="govuk-notification-banner__title"
                        id="govuk-notification-banner-title">@ViewData["Title"]</h2>
                </div>
                <div class="govuk-notification-banner__content">
                    <h3 class="govuk-notification-banner__heading">
                        The children of this parent or guardian are eligible for @Model.EligibilityTypeLabel.
                    </h3>
                </div>
            </div>

<h1 class="govuk-heading-l">Parent or guardian details</h1>

            <div class="govuk-body">
                <dl class="govuk-summary-list">

                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Last Name
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.ParentLastName
                        </dd>
                    </div>

                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Date of birth
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @DateTime.Parse(Model.ParentDateOfBirth).ToString("d MMMM yyyy")
                        </dd>
                    </div>

                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            National Insurance number
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.ParentNino
                        </dd>
                    </div>
                </dl>
            </div>
            <h1 class="govuk-heading-l">What to do next</h1>
            <p class="govuk-body">Tell the childcare provider that the children of this parent or guardian are eligible for @Model.EligibilityTypeLabel.</p>
            <p class="govuk-body">You can <a href="#" id="print-link">print this page</a> for the parent or guardian to keep.</p>
            @Html.ActionLink("Run another check", "MenuSingleCheck", "Home", new { clearData = true }, new { @class = "govuk-button" })
        </div>
    </div>
</div>

<script src="~/js/site.js"></script>