@model CheckChildcareEligibility.Admin.ViewModels.BulkCheckErrorsViewModel
@{
    ViewData["Title"] = "Fix data errors";
}

<div class="govuk-grid-column-two-thirds">
    @Html.ActionLink("Back", "Index", "Home", null, new { @class = "govuk-back-link" })
    @* <a class="govuk-back-link-nolink"></a> *@

    <h1 class="govuk-heading-l">@ViewData["Title"]</h1>
    <div class="govuk-warning-text">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
            <span class="govuk-visually-hidden">Warning</span>
            We cannot run checks as the file you uploaded contains data errors.
        </strong>
    </div>

    <p class="govuk-body">You must:</p>
    <ol class="govuk-list govuk-list--number">
        <li>Fix the errors listed below for each row.</li>
        <li>@Html.ActionLink("Upload your file again and run another check.", "Bulk_Check", "BulkCheck")</li>
    </ol>

    <table class="govuk-table" id="errors">
        <caption class="govuk-table__caption govuk-table__caption--s"></caption>
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th scope="col" class="govuk-table__header">Line</th>
                <th scope="col" class="govuk-table__header">Error</th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            @foreach (var error in Model.Errors)
            {
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">@error.LineNumber</td>
                    <td class="govuk-table__cell">@error.Message</td>
                </tr>
            }
        </tbody>
    </table>
</div>